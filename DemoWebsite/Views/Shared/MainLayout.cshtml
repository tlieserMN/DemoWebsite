<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        function navbar_element_clicked() {
            $('#navbar_elements li').each(function () {
                $(this).addClass("active");
            });
        }
    </script>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a class="nav-link" href="@Url.Action("Messages", "Messages")">Messages</a></li>
                <li><a class="nav-link" href="@Url.Action("Account", "Account")">Account</a></li>
            </ul>
        </div>
    </nav>
    <div id="content">
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>
