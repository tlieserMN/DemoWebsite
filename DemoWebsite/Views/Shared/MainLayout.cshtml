<!DOCTYPE html>
<html style="height:100%">
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <style>
        #content {
            padding-left:5%;
            padding-right:5%
        }
    </style>
    <script>
        function navbar_element_clicked() {
            $('#navbar_elements li').each(function () {
                $(this).addClass("active");
            });
        }
    </script>
</head>
<body style="height:100%">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a class="nav-link" href="@Url.Action("Messages", "Messages")">Messages</a></li>
                <li><a class="nav-link" href="@Url.Action("Account", "Account")">Account</a></li>
            </ul>
        </div>
    </nav>
    <div id="content" class="container" style="height:80%">
        @RenderBody()
    </div>
    <footer class="footer" >
        <div class="container">
            <span class="text-muted">Place sticky footer content here.</span>
        </div>
    </footer>
    @RenderSection("scripts", false)
</body>
</html>
