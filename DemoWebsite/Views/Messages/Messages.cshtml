@model List<Friend>
@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div>
    <div class="col-lg-3">
        <h3>CONVERSATIONS</h3>
    </div>
    <div class="col-lg-6">
        @foreach (DemoWebsite.Friend user in Model)
        {
            <a style="text-decoration:none" href="@Url.Action("GetConversation", "Messages", new { id = user.UserID })">
            <div class="panel panel-default">
                <div class="panel-body">
                    @user.Sender
                </div>
            </div>
            </a>
        }
    </div>
</div>

